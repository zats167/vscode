page {
    width: 100%;
    height: 100%;
    color: #333;
    background-color: #f0f0f0;
}

.bbox {
    width: 82%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    background-color: white;
    border-radius: 5rpx;
    padding: 12px 20px 20px 20px;
}

.bbox .item {
    height: 42px;
    border-bottom: 1px solid #f2f2f2;
    padding: 4rpx 12rpx;
}

.bbox .item .il {
    width: 100%;
    height: 100%;
    flex: 1;
}

.bbox .item .il .t {
    width: 100%;
    font-size: 30rpx;
}

.itxt {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
}

.bbox .item .il .b::before {
    display: inline-block;
    content: "";
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    margin-left: -34rpx;
    top: 50%;
    transform: translateY(-50%);
    background-size: 100% 100%;
    background-repeat: no-repeat;
    background-position: center center;
    background-image: url("https://wq.jiyongstore.com/addons/jy_fen/template/images/applet/xh_a.png?v=1");
}

.bbox .item .ir {
    width: 30px;
    height: 100%;
    text-align: center;
}

.bbox .item .ir .img-wblogo {
    width: 20rpx;
    height: 30rpx;
}

button.sut_tijiao {
    background-color: #FFFFFF;
    margin-top: 20px;
    height: 36px;
    line-height: 36px;
    border-radius: 18px;
    font-size: 32rpx;
    width: 180px;
}

.hydl {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.hydl view {
    margin-top: 20rpx;
    font-size: 30rpx;
}

.hydlbd {
    width: 60%;
    left: 50%;
    top: 35%;
    position: fixed;
    transform: translate(-50%,0);
    background: #fff;
    border-radius: 10px;
    z-index: 9999;
    padding: 50rpx;
}

.hydlqueren {
    position: relative;
    height: 80rpx;
    width: 50%;
    font-size: 30rpx;
    line-height: 80rpx;
    text-align: center;
    color: white;
    background: #09BB07;
    border-radius: 10rpx;
    margin-top: 30rpx;
}

button:active {
    color: rgba(255,255,255,0.6);
    opacity: 0.6;
}

.hydlzhezhao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.7);
    z-index: 9998;
}