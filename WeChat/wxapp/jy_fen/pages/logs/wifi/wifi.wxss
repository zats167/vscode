page {
    width: 100%;
    height: 100%;
    color: #333;
    background-color: #f9f9f9;
}

.index {
    width: 100%;
}

.addbox {
    width: 92%;
    height: 80px;
    line-height: 80px;
    font-size: 40rpx;
    display: block;
    text-align: center;
    border: 1px dashed #909090;
    margin: 12px auto 0px auto;
}

.wifilist {
    width: 92%;
    margin: 12px auto 0 auto;
}

.wifilist .item {
    background-color: #fff;
    padding: 12px;
    margin-bottom: 12px;
}

.wifilist .item .il {
    width: 100%;
    flex: 1;
}

.wifilist .item .il .t {
    font-size: 32rpx;
    margin-top: 10px;
}

.wifilist .item .il .n {
    font-size: 30rpx;
    margin-top: 10px;
    color: #999;
}

.wifilist .item .ir {
    width: 72px;
    height: 100px;
}

.wifilist .item .ir .img {
    width: 100%;
    height: 100%;
}

.hydl {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.hydl view {
    margin-top: 20rpx;
    font-size: 30rpx;
}

.hydlbd {
    width: 60%;
    left: 50%;
    top: 35%;
    position: fixed;
    transform: translate(-50%,0);
    background: #fff;
    border-radius: 10px;
    z-index: 9999;
    padding: 50rpx;
}

.hydlqueren {
    position: relative;
    height: 80rpx;
    width: 50%;
    font-size: 30rpx;
    line-height: 80rpx;
    text-align: center;
    color: white;
    background: #09BB07;
    border-radius: 10rpx;
    margin-top: 30rpx;
}

button:active {
    color: rgba(255,255,255,0.6);
    opacity: 0.6;
}

.hydlzhezhao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.7);
    z-index: 9998;
}

.bottom-barbg {
    width: 100%;
    height: 42px;
}

.bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
}

.bottom-bar .address-edit {
    text-align: center;
    height: 100%;
    font-size: 30rpx;
    line-height: 100rpx;
    display: block;
    color: #fff;
    border-radius: 0px;
    flex: 1;
}

.bottom-bar view {
    line-height: 100rpx;
    color: #fff;
    font-size: 28rpx;
    font-weight: normal;
}