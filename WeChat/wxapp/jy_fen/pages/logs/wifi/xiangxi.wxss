page {
    width: 100%;
    height: 100%;
    color: #333;
    background-color: #f9f9f9;
}

.top {
    width: 100%;
    height: 24px;
    line-height: 24px;
    margin-top: 0px;
    text-align: center;
    font-size: 30rpx;
    color: #333;
}

.list {
    width: 100%;
    height: 100%;
    margin: 12px auto 0px auto;
}

.scroll-view-list {
    width: 100%;
    height: 100%;
    white-space: nowrap;
    text-align: center;
}

.scroll-view-list .item {
    width: 80%;
    height: 100%;
    display: inline-block;
    margin-right: 10px;
}

.scroll-view-list .item:first-child {
    margin-left: 30px;
}

.scroll-view-list .item:last-child {
    margin-right: 30px;
}

.scroll-view-list .item .t {
    width: 100%;
    line-height: 40px;
    height: 40px;
    text-align: center;
    font-size: 32rpx;
    color: #999;
}

.scroll-view-list .item .p {
    text-align: center;
    width: 100%;
    text-align: center;
}

.scroll-view-list .item .p .img {
    width: 100%;
    height: 400px;
}

.tool {
    display: table;
    width: 80%;
    margin: 15px auto 0px auto;
    white-space: nowrap;
    text-align: center;
}

.tool .btn {
    width: 25%;
    float: left;
    background-color: transparent;
}

.tool .btn .img {
    width: 40px;
    height: 40px;
}

.tool .btn .txt {
    width: 100%;
    height: 24px;
    line-height: 24px;
    color: #666;
    font-size: 28rpx;
}

.hydl {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.hydl view {
    margin-top: 20rpx;
    font-size: 30rpx;
}

.hydlbd {
    width: 60%;
    left: 50%;
    top: 35%;
    position: fixed;
    transform: translate(-50%,0);
    background: #fff;
    border-radius: 10px;
    z-index: 9999;
    padding: 50rpx;
}

.hydlqueren {
    position: relative;
    height: 80rpx;
    width: 50%;
    font-size: 30rpx;
    line-height: 80rpx;
    text-align: center;
    color: white;
    background: #09BB07;
    border-radius: 10rpx;
    margin-top: 30rpx;
}

button:active {
    color: rgba(255,255,255,0.6);
    opacity: 0.6;
}

.hydlzhezhao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.7);
    z-index: 9998;
}