page {
    width: 100%;
    height: 100%;
    color: #333;
    background-color: #f0f0f0;
}

.top {
    width: 100%;
    height: 30px;
    line-height: 30px;
    margin-top: 20px;
    text-align: center;
    font-size: 40rpx;
}

.list {
    width: 100%;
    margin: 0px auto;
}

.scroll-view-list {
    width: 100%;
    height: 100%;
    white-space: nowrap;
    text-align: center;
}

.scroll-view-list .item {
    width: 80%;
    height: 100%;
    display: inline-block;
    margin-right: 10px;
}

.scroll-view-list .item:first-child {
    margin-left: 30px;
}

.scroll-view-list .item:last-child {
    margin-right: 30px;
}

.scroll-view-list .item .t {
    width: 100%;
    line-height: 40px;
    height: 40px;
    text-align: center;
    font-size: 32rpx;
    color: #999;
}

.scroll-view-list .item .p {
    width: 100%;
    text-align: center;
}

.scroll-view-list .item .p .img {
    width: 100%;
    height: 100%;
}